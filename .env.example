# Blaze Intelligence Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# AI API Configuration
# =============================================================================

# Claude API
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-sonnet-20240229

# OpenAI/ChatGPT API
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Google AI/Gemini API
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
GOOGLE_AI_MODEL=gemini-pro

# =============================================================================
# Sports Data APIs
# =============================================================================

# MLB Stats API (often free, but rate-limited)
MLB_API_KEY=optional_mlb_api_key
MLB_API_BASE_URL=https://statsapi.mlb.com/api/v1

# ESPN API (public endpoints)
ESPN_API_BASE_URL=https://site.api.espn.com/apis/site/v2/sports

# Perfect Game API (youth baseball)
PERFECT_GAME_API_KEY=your_perfect_game_api_key
PERFECT_GAME_BASE_URL=https://api.perfectgame.org

# Hawk-Eye Sports API
HAWKEYE_API_KEY=your_hawkeye_api_key
HAWKEYE_BASE_URL=https://api.hawkeye.com

# =============================================================================
# Cloudflare Configuration
# =============================================================================

# Cloudflare Account
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id

# Cloudflare R2 Storage
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=blaze-intelligence-data

# Cloudflare KV Storage
KV_NAMESPACE_ID=your_kv_namespace_id
KV_API_TOKEN=your_kv_api_token

# =============================================================================
# Database Configuration
# =============================================================================

# Cloudflare D1 Database
D1_DATABASE_ID=your_d1_database_id
D1_TOKEN=your_d1_token

# Redis (for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# =============================================================================
# Analytics and Monitoring
# =============================================================================

# Google Analytics
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry Error Tracking
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=development

# Application Performance Monitoring
APM_SERVER_URL=your_apm_server_url
APM_SECRET_TOKEN=your_apm_secret_token

# =============================================================================
# External Integrations
# =============================================================================

# Slack Notifications
SLACK_WEBHOOK_URL=your_slack_webhook_url
SLACK_CHANNEL=#blaze-intelligence

# Email Service
EMAIL_API_KEY=your_email_api_key
EMAIL_FROM=noreply@blaze-intelligence.com

# SMS Service (for alerts)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# =============================================================================
# Development Configuration
# =============================================================================

# Environment
NODE_ENV=development
PORT=8080
HOST=localhost

# Debug Settings
DEBUG=blaze:*
LOG_LEVEL=info

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_REAL_TIME_DATA=true
ENABLE_MOBILE_APP=true
ENABLE_VISION_AI=true

# =============================================================================
# Security Configuration
# =============================================================================

# Session Security
SESSION_SECRET=your_long_random_session_secret_here
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION=24h

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://blaze-intelligence.com,https://blazesportsintel.com,https://blaze-intelligence.netlify.app,https://blaze-intelligence-platform.pages.dev
CORS_CREDENTIALS=true

# =============================================================================
# Team-Specific Configuration
# =============================================================================

# Cardinals (MLB)
CARDINALS_TEAM_ID=138
CARDINALS_API_KEY=optional_cardinals_specific_key

# Titans (NFL)
TITANS_TEAM_ID=10
TITANS_API_KEY=optional_titans_specific_key

# Longhorns (NCAA)
LONGHORNS_TEAM_ID=251
LONGHORNS_API_KEY=optional_longhorns_specific_key

# Grizzlies (NBA)
GRIZZLIES_TEAM_ID=15
GRIZZLIES_API_KEY=optional_grizzlies_specific_key

# =============================================================================
# Mobile App Configuration
# =============================================================================

# React Native
REACT_NATIVE_APP_ID=com.blazeintelligence.app
REACT_NATIVE_VERSION=1.0.0

# App Store Configuration
IOS_BUNDLE_ID=com.blazeintelligence.app
ANDROID_PACKAGE_NAME=com.blazeintelligence.app

# Push Notifications
FIREBASE_SERVER_KEY=your_firebase_server_key
APNS_KEY_ID=your_apns_key_id
APNS_TEAM_ID=your_apns_team_id

# =============================================================================
# Backup and Recovery
# =============================================================================

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=s3://your-backup-bucket

# =============================================================================
# Performance Tuning
# =============================================================================

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=100mb

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# =============================================================================
# Legal and Compliance
# =============================================================================

# Data Privacy
GDPR_COMPLIANCE=true
CCPA_COMPLIANCE=true
DATA_RETENTION_DAYS=2555

# Terms and Conditions
TERMS_VERSION=1.0
PRIVACY_POLICY_VERSION=1.0

