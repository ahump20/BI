# Blaze Intelligence OS V2 Environment Variables
# Copy this file to .env and fill in your values

# API Keys (Never commit actual keys!)
VITE_OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
VITE_ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxx
VITE_GEMINI_API_KEY=AIzaSyxxxxxxxxxxxxxxxxxxxxx

# Sports Data APIs
VITE_MLB_API_KEY=your_mlb_api_key_here
VITE_NFL_API_KEY=your_nfl_api_key_here
VITE_NBA_API_KEY=your_nba_api_key_here
VITE_NCAA_API_KEY=your_ncaa_api_key_here
VITE_PERFECT_GAME_API_KEY=your_perfect_game_key_here

# Cloudflare Configuration
CLOUDFLARE_ACCOUNT_ID=your_account_id
CLOUDFLARE_API_TOKEN=your_api_token
CLOUDFLARE_ZONE_ID=your_zone_id
KV_NAMESPACE_ID=your_kv_namespace_id
D1_DATABASE_ID=your_d1_database_id
R2_BUCKET_NAME=blaze-sports-data

# WebSocket Server
VITE_WS_URL=ws://localhost:8001
VITE_WS_AUTH_TOKEN=your_websocket_token_here

# Database
DATABASE_URL=postgresql://user:pass@localhost:5432/blaze_intelligence
REDIS_URL=redis://localhost:6379

# Analytics & Monitoring
SENTRY_DSN=https://xxxxxxxxxxxxx@sentry.io/xxxxxx
MIXPANEL_TOKEN=your_mixpanel_token
GA_TRACKING_ID=G-XXXXXXXXXX

# Vision AI Configuration
VISION_AI_ENDPOINT=https://vision.blaze-intelligence.com
VISION_AI_API_KEY=your_vision_ai_key

# NIL Calculator
NIL_BASE_MULTIPLIER=1.0
NIL_MARKET_ADJUSTMENT=1.2

# Environment
NODE_ENV=development
VITE_APP_ENV=development
VITE_APP_VERSION=2.0.0

# Feature Flags
ENABLE_VISION_AI=true
ENABLE_NIL_CALCULATOR=true
ENABLE_LIVE_GAMES=true
ENABLE_PREDICTIONS=true

# Security
JWT_SECRET=your_jwt_secret_here_minimum_32_chars
ENCRYPTION_KEY=your_encryption_key_here

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=notifications@blaze-intelligence.com
SMTP_PASS=your_smtp_password

# Third-party Services
STRIPE_PUBLIC_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxx
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxx
HUBSPOT_API_KEY=your_hubspot_key_here

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# Caching
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE_MB=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json