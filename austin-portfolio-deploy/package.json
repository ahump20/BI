{
  "name": "blaze-intelligence",
  "version": "1.0.0",
  "description": "Elite Sports Analytics Platform",
  "main": "src/server/api-server.ts",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsx watch src/server/api-server.ts",
    "dev:client": "python3 -m http.server 8000",
    "build": "npm run build:static && npm run build:worker",
    "build:static": "mkdir -p dist && cp -r *.html src/client/ dist/",
    "build:worker": "esbuild src/worker/api-worker.js --bundle --format=esm --outfile=dist/worker.js --external:crypto --external:buffer",
    "preview": "npm run build && npm run serve",
    "serve": "python3 -m http.server 8000 --directory dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "deploy": "npm run build && wrangler pages deploy dist",
    "deploy:worker": "wrangler deploy",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "typecheck": "tsc --noEmit",
    "health-check": "curl -f http://localhost:3000/healthz || exit 1",
    "validate": "npm run lint && npm run typecheck && npm run test",
    "start": "node dist/server.js",
    "postinstall": "npm run build"
  },
  "keywords": [
    "sports",
    "analytics",
    "ai",
    "baseball", 
    "football",
    "basketball"
  ],
  "author": "Austin Humphrey <ahump20@outlook.com>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231025.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "concurrently": "^8.2.2",
    "esbuild": "^0.19.8",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "playwright": "^1.40.1",
    "prettier": "^3.1.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2",
    "wrangler": "^3.19.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/blaze-intelligence.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/blaze-intelligence/issues"
  },
  "homepage": "https://blaze-intelligence.com"
}